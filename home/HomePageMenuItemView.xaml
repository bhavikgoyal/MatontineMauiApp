<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MatontineDigitalApp.home.HomePageMenuItemView"
  xmlns:xct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:local="clr-namespace:MatontineDigitalApp"
             Shell.NavBarIsVisible="False"
  >


  <ContentView.Content>
    <StackLayout  Margin="40, 0, 0, 0" Orientation="Horizontal" Spacing="0" >
      <StackLayout.GestureRecognizers>
        <TapGestureRecognizer Tapped="Item_Tapped"/>
      </StackLayout.GestureRecognizers>

      <Image Grid.Column="0"
                         x:Name="img"
                          Source="{local:ImageResource MatontineDigitalApp.Images.community.png}"
                          VerticalOptions="CenterAndExpand"
                           HeightRequest="50"
                      WidthRequest="50"
                      HorizontalOptions="Start"
                       />
      <StackLayout    Spacing="0" HorizontalOptions="FillAndExpand" >
        <Label x:Name="label" Text="Community" Margin="10, 0, 0, 0"
                      VerticalOptions="CenterAndExpand" />

        <BoxView Grid.Column="1" 
                                HeightRequest="1"
                                BackgroundColor="Black" />
      </StackLayout>
    </StackLayout>
  </ContentView.Content>
  
</ContentView>