<?xml version="1.0" encoding="UTF-8" ?>
<Application
  x:Class="MatontineDigitalApp.App"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:home="clr-namespace:MatontineDigitalApp.home"
  xmlns:local="clr-namespace:MatontineDigitalApp">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
        <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
      </ResourceDictionary.MergedDictionaries>

      <!--  ControlTemplate with Back and Next Buttons  -->
      <ControlTemplate x:Key="MainPageTemplate">
        <Grid
          Padding="0"
          BackgroundColor="#ffffff"
          RowSpacing="0">
          <Grid.RowDefinitions>
            <RowDefinition Height="125" />
            <RowDefinition Height="125" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="45" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
          </Grid.ColumnDefinitions>

          <Grid
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.ColumnSpan="3">
            <Grid.RowDefinitions>
              <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="220" />
              <ColumnDefinition Width="30" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Main Content  -->
            <Frame
              Grid.ColumnSpan="2"
              Padding="0"
              BackgroundColor="#27ae60"
              BorderColor="#27ae60"
              CornerRadius="140"
              HasShadow="False"
              HeightRequest="250"
              HorizontalOptions="Start"
              VerticalOptions="Center"
              WidthRequest="250">
              <Frame
                Padding="0"
                BackgroundColor="White"
                BorderColor="White"
                CornerRadius="80"
                HasShadow="False"
                HeightRequest="160"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="160">
                <StackLayout
                  Margin="0"
                  Padding="2,0"
                  HorizontalOptions="Fill"
                  Spacing="0"
                  VerticalOptions="Fill">
                  <Label
                    x:Name="subjectLBL"
                    FontAttributes="Bold"
                    FontSize="Large"
                    HorizontalOptions="CenterAndExpand"
                    HorizontalTextAlignment="Center"
                    IsVisible="true"
                    LineBreakMode="WordWrap"
                    Text="{TemplateBinding SubjectLabel}"
                    TextColor="Black"
                    VerticalOptions="CenterAndExpand" />
                  <Image x:Name="subjectIMG" Source="{Binding Path=SubjectImage, Source={RelativeSource AncestorType={x:Type home:HomePage}}}" />
                </StackLayout>
              </Frame>
            </Frame>
          </Grid>

          <Rectangle
            Grid.Row="1"
            Grid.RowSpan="3"
            Grid.Column="0"
            Margin="0,-10,0,0"
            Fill="#27ae60" />

          <!--  ContentPresenter (Content for Pages)  -->
          <ContentPresenter
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Padding="10" />

          <!--  Navigation Buttons (Back and Next)  -->
          <Grid
            Grid.Row="3"
            Grid.ColumnSpan="3"
            HeightRequest="70">
            <Grid.RowDefinitions>
              <RowDefinition Height="45" />
              <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="50" />
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="160" />
            </Grid.ColumnDefinitions>

            <!--  Back Button  -->
            <StackLayout x:Name="BackButtonContainer" Grid.Column="0">

              <Path
                x:Name="prevNavView"
                Margin="5"
                Aspect="Uniform"
                Data="M504 256C504 119 393 8 256 8S8 119 8 256s111 248 248 248 248-111 248-248zm-448 0c0-110.5 89.5-200 200-200s200 89.5 200 200-89.5 200-200 200S56 366.5 56 256zm72 20v-40c0-6.6 5.4-12 12-12h116v-67c0-10.7 12.9-16 20.5-8.5l99 99c4.7 4.7 4.7 12.3 0 17l-99 99c-7.6 7.6-20.5 2.2-20.5-8.5v-67H140c-6.6 0-12-5.4-12-12z"
                Fill="White"
                HeightRequest="32"
                Rotation="180" />
            </StackLayout>

            <!--  Next Button  -->
            <Grid x:Name="nextNavView" Grid.Column="2">
              <Grid.RowDefinitions>
                <RowDefinition Height="*" />
              </Grid.RowDefinitions>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="40" />
              </Grid.ColumnDefinitions>
              <Frame
                x:Name="hello"
                Grid.Column="1"
                BackgroundColor="#27ae60"
                HasShadow="False" />

              <Border
                x:Name="NextButtonContainer"
                Grid.ColumnSpan="2"
                BackgroundColor="#27ae60"
                StrokeThickness="0">
                <!--<Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnNextTapped" />
                                </Border.GestureRecognizers>-->
                <Border.StrokeShape>
                  <RoundRectangle CornerRadius="25,0,25,0" />
                </Border.StrokeShape>

                <StackLayout Orientation="Horizontal" Spacing="0">
                  <Label
                    x:Name="nextBL"
                    Padding="0,0,0,3"
                    FontAttributes="Bold"
                    FontSize="Medium"
                    HorizontalOptions="FillAndExpand"
                    HorizontalTextAlignment="Center"
                    Text="Next"
                    TextColor="White"
                    VerticalTextAlignment="Center" />
                  <Path
                    Margin="0,0,5,0"
                    Aspect="Uniform"
                    Data="M504 256C504 119 393 8 256 8S8 119 8 256s111 248 248 248 248-111 248-248zm-448 0c0-110.5 89.5-200 200-200s200 89.5 200 200-89.5 200-200 200S56 366.5 56 256zm72 20v-40c0-6.6 5.4-12 12-12h116v-67c0-10.7 12.9-16 20.5-8.5l99 99c4.7 4.7 4.7 12.3 0 17l-99 99c-7.6 7.6-20.5 2.2-20.5-8.5v-67H140c-6.6 0-12-5.4-12-12z"
                    Fill="white"
                    HeightRequest="32"
                    HorizontalOptions="End"
                    WidthRequest="32" />
                </StackLayout>
              </Border>
            </Grid>
          </Grid>
        </Grid>
      </ControlTemplate>

      <Style TargetType="ContentPage">
        <Setter Property="ControlTemplate" Value="{StaticResource MainPageTemplate}" />
        <Setter Property="Shell.NavBarIsVisible" Value="False" />
      </Style>

    </ResourceDictionary>
  </Application.Resources>
</Application>
